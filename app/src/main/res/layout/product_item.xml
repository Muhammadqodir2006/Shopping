<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="12dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="1dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/product_item_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/product_tem_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="Samsung Galaxy S22 Ultra"
            app:layout_constraintEnd_toEndOf="@+id/product_item_image"
            app:layout_constraintStart_toStartOf="@+id/product_item_image"
            app:layout_constraintTop_toBottomOf="@+id/product_item_image" />

        <TextView
            android:id="@+id/product_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="550 $"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginVertical="4dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/product_tem_title"
            app:layout_constraintTop_toBottomOf="@+id/product_tem_title" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/product_item_saved"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:src="@drawable/not_saved_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/product_item_price"
            app:layout_constraintTop_toTopOf="@+id/product_item_price" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/product_item_cart_civ"
            android:layout_marginHorizontal="2dp"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:src="@drawable/cart_not_selected_icon"
            app:layout_constraintBottom_toBottomOf="@+id/product_item_saved"
            app:layout_constraintEnd_toStartOf="@+id/product_item_saved"
            app:layout_constraintTop_toTopOf="@+id/product_item_saved" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>